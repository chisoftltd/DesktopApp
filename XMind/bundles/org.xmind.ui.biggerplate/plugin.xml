<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="org.eclipse.ui.commands">
      <command
            categoryId="org.xmind.ui.category.mindmap"
            description="%command.UploadToBiggerplate.description"
            id="org.xmind.ui.command.biggerplate"
            name="%command.UploadToBiggerplate.name">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="org.xmind.ui.biggerplate.BiggerplateUploadHandler"
            commandId="org.xmind.ui.command.biggerplate">
         <activeWhen>
               <reference
                     definitionId="org.xmind.ui.expression.isMindMapEditorContributingContents">
               </reference>
         </activeWhen>
      </handler>
   </extension>
   <extension
         point="org.eclipse.ui.preferencePages">
      <page
            class="org.xmind.ui.biggerplate.BiggerplatePrefPage"
            id="org.xmind.ui.biggerplatePrefPage"
            name="%prefPage.biggerplate.name">
      </page>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            allPopups="false"
            locationURI="menu:shareMenu?after=group.thirdparty">
         <command
               commandId="org.xmind.ui.command.biggerplate"
               id="org.xmind.ui.share.biggerplate"
               label="%menuitem.file.share.biggerplate.label"
               style="push">
         </command>
      </menuContribution>
      <menuContribution
            allPopups="false"
            locationURI="menu:org.xmind.ui.toolbar.export.share.menu?after=additions">
         <command
               commandId="org.xmind.ui.command.biggerplate"
               id="org.xmind.ui.toolbar.export.share.menu.biggerplate"
               label="%menuitem.toolbar.share.biggerplate.label"
               style="push">
         </command>
      </menuContribution>
   </extension>
   
</plugin>
